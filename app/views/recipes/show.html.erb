<p id="notice"><%= notice %></p>

<h2><%= @recipe.title %></h2>
<p><%= @recipe.description %></p>

<h4>Ingredients</h4>
<ul>
  <% @recipe.ingredients.split(/\r/).each do |i| %>
    <li><%= i %></li>
  <% end %>
</ul>

<h4>Directions</h4>
<ul>
  <% @recipe.directions.split(/\r/).each do |i| %>
    <li><%= i %></li>
  <% end %>
</ul>


<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
