<% content_for :title, "Your Favorite Recipes"%>
<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to "Remove from Fav", remove_fav_path(recipe), {method: 'delete'} %></td>

      </tr>
    <% end %>
  </tbody>
</table>
